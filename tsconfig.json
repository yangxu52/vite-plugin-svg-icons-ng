{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./packages"],
  "exclude": ["**/dist", "**/node_modules", "**/test"]
}
